<h1>マイページ</h1>

		<%= attachment_image_tag @user, :user_image, format: 'jpeg', fallback: "/no_image.jpg", size: "300x300", class: "user-image" %></br>
		<%= @user.nick_name %></br>
		<%= @user.user_status %></br>
		<%= link_to "ユーザー情報を編集", edit_user_path(current_user.id) ,class: "btn btn-primary user-edit" ,style: "color: white;" %></br>
     	<%=link_to "退会する", user_path(@user), "data-confirm" => "本当に退会しますか？", method: :delete, class: "btn btn-danger",style: "margin-top: 10px;" %>


     	<h2>お気に入り商品一覧</h2>
     	<% @user.favorites.each do |f| %>
     		<% a = f.product %>
     		<% if a.images.present? %>
     			<%= attachment_image_tag a.images[0], :product_image,  format: 'jpeg', size: "95x95" %></br>
     		<% else %>
     			<%= image_tag("/no_image.jpg", :size => "60x60") %></br>
     		<% end %>
     		商品名：<%= a.product_name %>値段：<%= a.product_price %>円</br>
     		商品紹介<%= a.product_introduction %></br>
     	<% end %>



     	<h2>購入履歴</h2>
     	<% @user.purchase_histories.each do |p| %>
     			<% p.purchase_items.each do |c| %>
     					購入商品画像：<%#= attachment_image_tag c, :purchase_product_image,  format: 'jpeg', size: "95x95" %></br>
     			<% end %>
     	<% end %>
     					購入商品名：<%= @item_name %></br>
     					購入価格<%= @item_price %></br>
     					購入個数<%= @item_quantity %></br>
     					ステータス：<%= @item_status %></br>
     					小計：<%= @item_total_price %></br>
     					総計<%#= total_price %>円
