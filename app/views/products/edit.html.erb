<div class="back-image">
<div class="back-color">

<div class=shop-main style="margin-top: 55px;">
    <div class=shop-sub-main>
        <div class="container">
            <div class="row">
            <div class="col-xs-12" style="text-align: center;">

                <h1 class="text" style="margin:40px 0px;">商品を編集する</h1>

					<%#= form_for @product, url: user_path, method: :patch do |f| %>
					<%= form_for @product do |f| %>
						<%#= f.hidden_field :shop_id, :value => @product.shop.id %>
						<div class="field text" style="margin-bottom: 20px; font-size: 30px;">
							【商品名】<br />
							<%= f.text_field :product_name, autofocus: true, placeholder:"商品名"%></br>
						</div>
						<div class="field text" style="margin-bottom: 20px; font-size: 30px;">
							【商品の紹介】<br />
							<%= f.text_area :product_introduction, autofocus: true, placeholder:"商品の紹介文"%></br>
						</div>
						<div class="field text" style="margin-bottom: 20px; font-size: 30px;">
							【ジャンル】<br />
							<%= f.select :product_genre, [["あまいスイカ(飲食物)", "飲食物"], ["あまいスイカGoods(飲食物以外)", "Goods"]] %></br>
						</div>
						<div class="field text" style="margin-bottom: 20px; font-size: 30px;">
							【販売価格】<br />
							<%= f.number_field :product_price, autofocus: true, placeholder:"値段"%>円</br>
						</div>
						<div class="field text" style="margin-bottom: 20px; font-size: 30px;">
							【商品の在庫数】<br />
							<%= f.number_field :product_stock, autofocus: true, placeholder:"商品在庫数"%>個</br>
						</div>
							<div class="text" style="font-size: 30px;">【商品の画像】</div><br />
							<div class="text" style="font-size: 15px;">(※最大4枚まで表示できます。)</div><br />
							<%= f.attachment_field :images_product_images, multiple: true, class: "text", style: "margin-bottom:20px; margin-right:43%; margin-left:43%; font-size: 18px;" %></p>
							<div class="actions text" style="margin-bottom: 60px;">
							<%= f.submit "商品を申請する", class: "btn btn-default text", style:"font-size:20px; padding:10px 30px; margin-top:20px;" %>
						</div>
					<% end %>
			</div>
			</div>
		</div>
	</div>
</div>
</div>
</div>
