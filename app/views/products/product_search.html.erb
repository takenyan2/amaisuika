<h1>TOPページ</h1>

	<%if @search = "true" %>
        <h2>検索結果</h2>
        <% @products.each do |product| %>
            <div class="event-body", style= "border: 1px solid white;">
            <%= link_to product_path(product.id) do %>
                <%= product.product_name %>
                <%= product.product_price %>
                <%= product.product_introduction %></br>
                <% product.images.each do |image| %>
                <%= attachment_image_tag image, :product_image, format: 'jpeg', fallback: "/no_image.jpg", size: "100x100" %>
                <% end %>
            </div>
          	<% end %>
        <% end %>
            <%= paginate @products, class: "pagenate" %>

        <% @shops.each do |shop| %>
            <div class="event-body", style= "border: 1px solid white;">
            <%= link_to shop_path(shop.id) do %>
                <%= attachment_image_tag shop, :shop_image, format: 'jpeg', fallback: "/no_image.jpg", size: "100x100" %></br>
                <%= shop.shop_name %>
                <%= shop.shop_introduction %>
            </div>
            <% end %>
        <% end %>
            <%= paginate @shops, class: "pagenate" %>
    <% else %>

        <% @user.favorites.each do |fav| %>
                <%= fav.product.product_name %>
                <%= fav.product.product_introduction %>
                <%= fav.product.product_price %>
        <% end %>
        <% @user.follows.each do |fol| %>
                <%= fol.shop.shop_name %>
                <%= attachment_image_tag fol.shop, :shop_image, format: 'jpeg', fallback: "/no_image.jpg", size: "100x100" %>
                <%= fol.shop.shop_introduction %>
                <%= fol.shop.prefecture %>
        <% end %>
    <% end %>
