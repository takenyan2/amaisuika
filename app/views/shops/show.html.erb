<h1>ショップ詳細</h1>
		店名：<%= @shop.shop_name %>
		<%= @shop.prefecture %></br>
		<%= attachment_image_tag @shop, :shop_image, format: 'jpeg', fallback: "/no_image.jpg", size: "300x300", class: "user-image" %></br>
		店舗情報：<%= @shop.shop_introduction %></br>
		配送期間<%= @shop.send_period %>日以内</br>
		お問合せ先：<%= @shop.shop_phone_number %></br>

	<h2>商品一覧</h2>
		<% @shop.products.each do |product| %>
		<%= link_to product_path(product.id) do %>
			商品名：<%=product.product_name %></br>
			<% product.images.each do |image| %>
			<%= attachment_image_tag image, :product_image, format: 'jpeg', fallback: "/no_image.jpg", size: "300x300", class: "user-image" %></br>
			<% end %>
			商品紹介：<%=product.product_introduction %></br>
			価格：<%=product.product_price %></br>
			在庫数：<%=product.product_stock %></br>
		<% end %>
		<% end %>

