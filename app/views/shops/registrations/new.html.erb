<div class="back-image">
<div class="back-top-color">

<div class=shop-main style="margin-top: 55px;">
    <div class=shop-sub-main>
        <div class="container">
            <div class="row">
            <div class="col-xs-12" style="text-align: center;">

                <h2 class="text" style="margin:40px 0px;">新しいお店をつくる</h2>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>

                  <div class="field text" style="margin-bottom: 20px; font-size: 30px;">
                    <%= f.label :都道府県, class: "text" %><br />
                    <%= f.select :prefecture, Shop.prefectures.keys, {prompt: '選択してください'}, autofocus: true %>
                  </div>

                  <div class="field  text" style="margin-bottom: 20px; font-size: 30px;">
                    <%= f.label :お店の名前, class: "text" %><br />
                    <%= f.text_field :shop_name, autofocus: true, autocomplete: "shop_name", placeholder:"お店の名前を記入" %>
                  </div>

                  <div class="field text" style="margin-bottom: 20px; font-size: 30px;">
                    <%= f.label :お店の説明, class: "text" %><br />
                    <%= f.text_area :shop_introduction, autofocus: true, placeholder:"お店のコンセプトや情報を記入" %>
                  </div>

                  <div class="field text" style="margin-bottom: 20px; font-size: 30px;">
                    <%= f.label :発送までの期間, class: "text" %><br />
                    <%= f.number_field :send_period, autofocus: true, autocomplete: "send_period", placeholder:"半角数字を記入" %>日以内
                  </div>

                  <div class="field text" style="margin-bottom: 20px; font-size: 30px;">
                    <%= f.label :お問合せ先の電話番号, class: "text" %><br />
                    <%= f.text_field :shop_phone_number, autofocus: true, autocomplete: "shop_phone_number", placeholder:"電話番号を記入" %>
                  </div>

                  <div class="field text" style="margin-bottom: 20px;  font-size: 30px;" >
                    <%= f.label :メールアドレス, class: "text" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレスを記入" %>
                  </div>

                  <div class="field text" style="margin-bottom: 20px;  font-size: 30px;">
                    <%= f.label :パスワードを設定, class: "text" %>
                    <% if @minimum_password_length %>
                    <em class="text"><br>(※<%= @minimum_password_length %> 文字以上の半角英数字で記入してください)</br></em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワードを記入" %>
                  </div>

                  <div class="field text" style="margin-bottom: 20px;  font-size: 30px;">
                    <%= f.label :上記と同じパスワードを入力, class: "text" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワードを記入" %>
                  </div>



                  <div class="actions">
                    <%= f.submit "新しいお店を作る", class: "btn btn-primary text",style:"font-size: 40px; margin-top:20px; color:white;" %>
                  </div>
                <% end %>

                <%= render "shops/shared/links" %>
            </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
