<!DOCTYPE html>
<html>
  <head>
    <title>Amaisuika</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheets" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/css/swiper.css">
  </head>

  <body class="back-image">
    <header>
        <% if user_signed_in?  %>
            <!-- 一般ユーザーログイン時のヘッダー -->
            <% if current_user.user_status == "一般ユーザー" %>
                <nav class="navbar navbar-default">
                  <div class="container-fluid">
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample3">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      </button>
                        <%= link_to product_search_path do %>
                        <div>ここにロゴ入れる</div>
                      <% end %>
                    </div>

                    <div class="collapse navbar-collapse" id="navbarEexample3">
                      <ul class="nav navbar-nav">
                        <li><%= link_to "あまいスイカGoods", new_shop_path %></li>
                        <li><%= link_to "マイページ", user_path(current_user.id) %></li>
                        <li><%= link_to "カートの中", cart_path(current_user.id) %></li>
                        <li><%= link_to "お店をひらく", new_shop_registration_path %></li>
                        <li><%=link_to "ログアウト", destroy_user_session_path, "data-confirm" => "ログアウトしますか？", method: :delete %></li>
                      </ul>
                      <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                          <%= form_tag(product_search_path, method: :get) do %>
                            <%= text_field_tag(:content,'', :placeholder => "検索してください", class:"form-control") %>
                            <%= submit_tag "検索する" %>
                          <% end %>
                        </div>
                      </form>
                    </div>
                  </div>
                </nav>
            <% end %>

            <!-- 管理者ログイン時のヘッダー -->
            <% if current_user.user_status == "管理者" %>
            <nav class="navbar navbar-default">
              <div class="container-fluid">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample3">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                    <%= link_to product_search_path do %>
                      <div>ここにロゴ入れる</div>
                    <% end %>
                </div>

                <div class="collapse navbar-collapse" id="navbarEexample3">
                  <ul class="nav navbar-nav">
                    <li><%= link_to "あまいスイカGoods", new_shop_path %></li>
                    <li><%= link_to "管理者ページ", search_path(current_user.id) %></li>
                    <li><<%= link_to "申請中の商品を確認", users_path %></li>
                    <li><%=link_to "ログアウト", destroy_user_session_path, "data-confirm" => "ログアウトしますか？", method: :delete %></li>
                  </ul>
                  <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                      <%= form_tag(product_search_path, method: :get) do %>
                        <%= text_field_tag(:content,'', :placeholder => "検索してください", class:"form-control") %>
                        <%= submit_tag "検索する" %>
                      <% end %>
                    </div>
                  </form>
                </div>
              </div>
            </nav>
            <% end %>
            <!-- ショップオーナーログイン時のヘッダー -->
        <% elsif shop_signed_in? %>
          <h1 class= "out-shop" style="margin-right: 20px;"><%= link_to "最初の画面に戻る", shop_main_path(current_shop.id),class: "label label-success" %></h1>
          <h1 class= "out-shop"><%= link_to "お店から出る",  destroy_shop_session_path, "data-confirm" => "お店から出ますか？", method: :delete, class: "label label-danger" %></h1>

            <!-- ログアウト時のヘッダー -->
        <% else %>
            <nav class="navbar navbar-default">
              <div class="container-fluid">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample3">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                    <%= link_to product_search_path do %>
                      <div>ここにロゴ入れる</div>
                    <% end %>
                </div>

                <div class="collapse navbar-collapse" id="navbarEexample3">
                  <ul class="nav navbar-nav">
                    <li><%= link_to "あまいスイカGoods", new_shop_path %></li>
                    <li><%= link_to "新規登録", new_user_registration_path %></li>
                    <li><%= link_to "ユーザーログイン", new_user_session_path %></li>
                    <li><%= link_to "お店をひらく", new_shop_registration_path %></li>
                    <li><%= link_to "お店に入る", new_shop_session_path %></li>
                  </ul>
                  <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                      <%= form_tag(product_search_path, method: :get) do %>
                        <%= text_field_tag(:content,'', :placeholder => "検索してください", class:"form-control") %>
                        <%= submit_tag "検索する" %>
                      <% end %>
                    </div>
                  </form>
                </div>
              </div>
            </nav>
        <% end %>

    </header>
    <%= yield %>
    <footer>
              <%=link_to "運営に質問する", "", style:"color:black;" %>
              <h5 style="color: black;">© あまいスイカ</h5>
    </footer>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/js/swiper.js"></script>
  </body>
</html>
